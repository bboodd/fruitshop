<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.shop.fruitshop.user.UserMapper">

    <!-- user 테이블 전체 칼럼 -->
    <sql id="userColumns">
        id,
        email,
        nickname,
        password,
        status,
        created_at,
        updated_at
    </sql>

    <!--    term 테이블 전체 컬럼-->
    <sql id="termColumns">
        id,
        title,
        content,
        required,
        created_at,
        updated_at
    </sql>

    <!--    member_term 테이블 전체 컬럼-->
    <sql id="userTermColumns">
        id,
        user_id,
        term_id,
        accepted_at
    </sql>

    <!--    product 테이블 전체 컬럼-->
    <sql id="productColumns">
        id,
        category_id,
        name,
        price,
        status,
        stock_quantity,
        content,
        created_at,
        updated_at
    </sql>

    <!--    category 테이블 전체 컬럼-->
    <sql id="categoryColumns">
        id,
        category_name
    </sql>


    <!--    SELECT <include refid="userColumns"/>  -->



    <select id="testSelect" resultType="hashmap">
        SELECT id,
               email
        FROM
            user
    </select>
</mapper>